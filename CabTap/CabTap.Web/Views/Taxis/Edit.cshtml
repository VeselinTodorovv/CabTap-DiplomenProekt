@using CabTap.Core.Entities.Enums
@model CabTap.Shared.Taxi.TaxiEditViewModel

@{
    ViewData["Title"] = "Edit Taxi";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Taxis" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="RegNumber" class="control-label"></label>
        <input asp-for="RegNumber" class="form-control" />
        <span asp-validation-for="RegNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManufacturerId" class="control-label"></label>
        <select asp-for="ManufacturerId" asp-items="ViewBag.ManufacturerId">
            <option value="">Select a manufacturer</option>
            @foreach (var manufacturer in Model.Manufacturers)
            {
                <option value="@manufacturer.Id">@manufacturer.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId">
            <option value="">Select a category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DriverId" class="control-label"></label>
        <select asp-for="DriverId" asp-items="ViewBag.DriverId">
            <option value="">Select a driver</option>
            @foreach (var driver in Model.Drivers)
            {
                <option value="@driver.Id">@driver.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input asp-for="Picture" class="form-control" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaxiStatus" class="control-label"></label>
        <select asp-for="TaxiStatus" asp-items="@(new SelectList(Enum.GetValues(typeof(TaxiStatus))))" class="form-control"></select>
        <span asp-validation-for="TaxiStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PassengerSeats" class="control-label"></label>
        <input asp-for="PassengerSeats" class="form-control" type="number" min="1" max="8" />
        <span asp-validation-for="PassengerSeats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="CreatedBy" class="form-control" placeholder="" hidden>
        <span asp-validation-for="CreatedBy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="CreatedOn" class="form-control" placeholder="" hidden>
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="LastModifiedOn" class="form-control" hidden>
        <span asp-validation-for="LastModifiedOn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="LastModifiedBy" class="form-control" placeholder="" hidden>
        <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using CabTap.Core.Entities.Enums
@model CabTap.Shared.Taxi.TaxiCreateViewModel

@{
    ViewData["Title"] = "Create Taxi";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Taxis" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            
            @* TODO: Driver *@
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="TaxiStatus" class="control-label"></label>
                <select asp-for="TaxiStatus" asp-items="@(new SelectList(Enum.GetValues(typeof(TaxiStatus))))" class="form-control"></select>
                <span asp-validation-for="TaxiStatus" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="PassengerSeats" class="control-label"></label>
                <input asp-for="PassengerSeats" class="form-control" />
                <span asp-validation-for="PassengerSeats" class="text-danger"></span>
            </div>
            
            @* disabled form fields *@
            <div class="form-group">
                <label asp-for="CreatedOn" class="control-label"></label>
                <input asp-for="CreatedOn" class="form-control" disabled>
                <span asp-validation-for="PassengerSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" placeholder="@Context.User.Identity.Name" disabled>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
    
            <div class="form-group">
                <label asp-for="LastModifiedOn" class="control-label"></label>
                <input asp-for="LastModifiedOn" class="form-control" disabled>
                <span asp-validation-for="LastModifiedOn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastModifiedBy" class="control-label"></label>
                <input asp-for="LastModifiedBy" class="form-control" placeholder="@Context.User.Identity.Name" disabled>
                <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
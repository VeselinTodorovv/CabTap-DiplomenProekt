@model CabTap.Shared.Taxi.TaxiDetailsViewModel
@{
    ViewData["Title"] = "Taxi Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="text-center col-md-4">Registration Number</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.RegNumber)</dd>

                        <dt class="text-center col-md-4">Manufacturer</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.ManufacturerId)</dd>

                        <dt class="text-center col-md-4">Category</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.CategoryId)</dd>

                        <dt class="text-center col-md-4">Driver</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.DriverId)</dd>

                        <dt class="text-center col-md-4">Description</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="text-center col-md-4">Picture</dt>
                        <dd class="text-center col-md-8">
                            <img src="@Html.DisplayFor(model => model.Picture)" alt="Taxi Image" class="img-thumbnail" style="max-height: 200px;" />
                        </dd>

                        <dt class="text-center col-md-4">Status</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.TaxiStatus)</dd>

                        <dt class="text-center col-md-4">Passenger Seats</dt>
                        <dd class="text-center col-md-8">@Html.DisplayFor(model => model.PassengerSeats)</dd>
                    </dl>
                    <div class="text-center">
                        <a class="btn btn-primary" asp-controller="Taxis" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-danger ml-2" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                        <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-md-4 {
        margin-bottom: 20px;
    }
</style>
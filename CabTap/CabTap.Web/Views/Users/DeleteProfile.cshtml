@model CabTap.Shared.User.ClientDeleteViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this user?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Username:</dt>
                        <dd class="col-sm-10">@Model.UserName</dd>

                        <dt class="col-sm-2">First Name:</dt>
                        <dd class="col-sm-10">@Model.FirstName</dd>

                        <dt class="col-sm-2">Last Name:</dt>
                        <dd class="col-sm-10">@Model.LastName</dd>

                        <dt class="col-sm-2">Email:</dt>
                        <dd class="col-sm-10">@Model.Email</dd>

                        <dt class="col-sm-2">Address:</dt>
                        <dd class="col-sm-10">@Model.Address</dd>
                    </dl>

                    <form asp-action="DeleteProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="javascript:history.back()" class="btn btn-secondary ml-2">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
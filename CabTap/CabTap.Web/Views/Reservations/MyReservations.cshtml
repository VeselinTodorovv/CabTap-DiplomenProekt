@using CabTap.Shared.Pagination
@model IEnumerable<CabTap.Shared.Reservation.ReservationAllViewModel>
@{
    ViewData["Title"] = "Reservation History";
}
<h1 style="margin-bottom: 30px;">@ViewData["Title"]</h1>

<partial name="_AdminPartial" />

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Reservations" asp-action="MyReservations" method="post" id="filterForm" class="mb-4">
            <div class="row align-items-end">
                <div class="col-md-3">
                    <label for="searchInput" class="form-label">Search by Username:</label>
                    <input type="text" class="form-control" id="searchInput" name="searchInput">
                </div>
                <div class="col-md-3">
                    <label for="sortSelect" class="form-label">Sort by:</label>
                    <select class="form-select" id="sortSelect" name="sortOption">
                        <option value="dateAsc">Date (Ascending)</option>
                        <option value="dateDesc">Date (Descending)</option>
                        <option value="priceAsc">Price (Ascending)</option>
                        <option value="priceDesc">Price (Descending)</option>
                        <option value="distanceAsc">Distance (Short to Long)</option>
                        <option value="distanceDesc">Distance (Long to Short)</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">Apply Filter & Sort</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <div style="padding-bottom: 15px;">
                        <h5 class="card-title fw-bold">
                            @await Html.PartialAsync("_TruncateLocationPartial", item.Origin)
                        </h5>
                        <h5 class="card-title fw-bold">
                            @await Html.PartialAsync("_TruncateLocationPartial", item.Destination)
                        </h5>
                    </div>

                    <p class="card-text">
                        <strong>@Html.DisplayNameFor(x => x.UserId): </strong>@item.UserId<br>
                        <strong>@Html.DisplayNameFor(x => x.TaxiId): </strong>@item.TaxiId<br>
                        <strong>@Html.DisplayNameFor(x => x.ReservationDateTime): </strong>@item.ReservationDateTime<br>
                        <strong>@Html.DisplayNameFor(x => x.Duration): </strong>@item.Duration min<br>
                        <strong>@Html.DisplayNameFor(x => x.Distance): </strong>@item.Distance km<br>
                        <strong>@Html.DisplayNameFor(x => x.Price): </strong>@item.Price<br>
                        <strong>@Html.DisplayNameFor(x => x.PassengersCount): </strong>@item.PassengersCount<br>
                        <strong>@Html.DisplayNameFor(x => x.RideStatus): </strong>@item.RideStatus<br>
                        <strong>@Html.DisplayNameFor(x => x.CreatedOn): </strong>@item.CreatedOn
                    </p>
                    <div class="text-center" style="margin-bottom: 15px;" >
                        <partial name="_EntityActionsPartial" model="@item.Id" />
                    </div>
                    <div class="card-footer" id="toggle">
                        <partial name="_ReservationActionsPartial" model="@item"/>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@{
    var paginationModel = new PaginationViewModel
    {
        CurrentPage = ViewBag.CurrentPage,
        TotalPages = ViewBag.TotalPages
    };
}
<div>
    <partial name="_PaginationPartial" model="paginationModel" />
</div>
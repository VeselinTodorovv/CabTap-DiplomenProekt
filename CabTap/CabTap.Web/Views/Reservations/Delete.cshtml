@model CabTap.Shared.Reservation.ReservationDeleteViewModel
@{
    ViewData["Title"] = "Delete Reservation";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this reservation?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">From:</dt>
                        <dd class="col-sm-10">@Model.Origin</dd>

                        <dt class="col-sm-2">To:</dt>
                        <dd class="col-sm-10">@Model.Destination</dd>
                        
                        <dt class="col-sm-2">Reservation Date:</dt>
                        <dd class="col-sm-10">@Model.ReservationDateTime</dd>

                        <dt class="col-sm-2">User:</dt>
                        <dd class="col-sm-10">@Model.User.UserName</dd>

                        <dt class="col-sm-2">Duration:</dt>
                        <dd class="col-sm-10">@Model.Duration</dd>

                        <dt class="col-sm-2">Price:</dt>
                        <dd class="col-sm-10">@Model.Price</dd>

                        <dt class="col-sm-2">Ride Status:</dt>
                        <dd class="col-sm-10">@Model.RideStatus</dd>

                        <dt class="col-sm-2">Passengers Count:</dt>
                        <dd class="col-sm-10">@Model.PassengersCount</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="javascript:history.back()" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
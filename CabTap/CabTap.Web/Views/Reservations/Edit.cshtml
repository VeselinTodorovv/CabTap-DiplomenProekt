@model CabTap.Shared.Reservation.ReservationEditViewModel

@{
    ViewData["Title"] = "Edit Taxi";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Reservations" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Origin" class="control-label"></label>
        <input asp-for="Origin" class="form-control" />
        <span asp-validation-for="Origin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Destination" class="control-label"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PassengersCount" class="control-label"></label>
        <textarea asp-for="PassengersCount" class="form-control"></textarea>
        <span asp-validation-for="PassengersCount" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input asp-for="Duration" class="form-control" placeholder="" hidden>
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    
     <div class="form-group">
        <input asp-for="Distance" class="form-control" placeholder="" hidden>
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input asp-for="TaxiId" class="form-control" placeholder="" hidden>
        <span asp-validation-for="TaxiId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input asp-for="UserId" class="form-control" placeholder="" hidden>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input asp-for="RideStatus" class="form-control" placeholder="" hidden>
        <span asp-validation-for="RideStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model CabTap.Shared.Driver.DriverDeleteViewModel

@{
    ViewData["Title"] = "Delete Driver";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this driver?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Name:</dt>
                        <dd class="col-sm-10">@Model.Name</dd>

                        <dt class="col-sm-2">Created By:</dt>
                        <dd class="col-sm-10">@Model.CreatedBy</dd>

                        <dt class="col-sm-2">Created On:</dt>
                        <dd class="col-sm-10">@Model.CreatedOn</dd>

                        <dt class="col-sm-2">Last Modified By:</dt>
                        <dd class="col-sm-10">@Model.LastModifiedBy</dd>

                        <dt class="col-sm-2">Last Modified On:</dt>
                        <dd class="col-sm-10">@Model.LastModifiedOn</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-sm-2 {
        margin-bottom: 20px;
    }
</style>
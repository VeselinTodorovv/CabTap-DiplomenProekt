@model CabTap.Shared.Driver.DriverCreateViewModel

@{
    ViewData["Title"] = "Create Driver";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Drivers" asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Driver Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter driver name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a href="javascript:history.back()" class="btn btn-secondary ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-group {
        margin-bottom: 15px;
    }
</style>